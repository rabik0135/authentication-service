<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1-create-refresh_token-table" author="rabinchuk">
        <createTable tableName="refresh_token">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_refresh_token"/>
            </column>
            <column name="token" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="expiry_date" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="user_credentials_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="2-add-index-token" author="rabinchuk">
        <createIndex indexName="idx_refresh_token_token" tableName="refresh_token">
            <column name="token"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
